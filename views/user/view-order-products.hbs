<section class="">
  <div class="  pt-5 mt-5">
    <div class="row">
      {{#each products}}
      <div class="col-xs-12 col-sm-6 col-md-6 col-lg-4 pl-4">
        <div class="card  mb-4 " style="height:18rem;width:25rem">
          <div class="row">
            <div class="column">
              <img class="card-img-top mr-auto " style="width:auto; height: 120px;  padding-left: 20px;
            padding-top: 15px;" src="/product-images/{{this.product._id}}.jpg" alt="Card image cap" />
            </div>
            <div class="column_2">
