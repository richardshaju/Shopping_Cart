            </div>
          </div>
        </div>

      </div>
      {{/each}}
    </div>
  </div>
</section>
{{/if}}

<script>
  function addToCart(productId) {
    $.ajax({
      url: '/add',
      method: 'get',
      success: (response) => {
        if (response.status) {
          location.href = '/login'
        } else {
          $.ajax({
            url: '/add-to-cart/' + productId,
            method: 'get',
            success: (response) => {
              if (response.status) {
                let count = $('#cartCount').html()
                count = parseInt(count) + 1
                $("#cartCount").html(count)
                location.href = '/cart'
              }
            }
          })
        }
      }
    })
  }
</script>

<style>
  .column {
    float: left;
    width: 30%;
  }

  .column_2 {
    width: 50%;
    padding: 1px;
