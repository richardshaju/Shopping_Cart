{{#if laptop}}
<section>
  <div class="  pt-5">
    <div class="row">
      {{#each products}}
      <div class="col-xs-12 col-sm-6 col-md-6 col-lg-4 pl-4">
        <div class="card  mb-4 " style="height:18rem;width:25rem">
          <div class="row">
            <div class="column">
              <img class="card-img-top mr-auto " style="width:auto; height: 120px;  padding-left: 20px;
            padding-top: 15px;" src="/product-images/{{this._id}}.jpg" alt="Card image cap" />
            </div>
            <div class="column_2">
              <h5 class="card-title" style="">{{this.Name}}</h5>
              <h5 class="card-title" style="font-size: 25px;"> ₹{{this.Price}}</h5>
            </div>
            <div class="row">
            </div>
          </div>
          <div class="card-body ">
            <p class="card-text ">{{this.Description}}</p>
            {{!-- <a href="/add-to-cart/{{this._id}}" class="btn btn-primary">Add To Cart</a> --}}
            <div class="text-center">
              <button class="btn btn-primary " onclick="addToCart('{{this._id}}')">Add To Cart<i style='font-size:15px'
                  class='fas'>&#xf07a;</i></button>
            </div>
          </div>
        </div>
      </div>
      {{/each}}
    </div>
  </div>
</section>
{{else if fashion}}
