<script>

  function cancelOrder(orderId) {
    if (confirm("Are you sure to cancel the current order?")) {
      $.ajax({
        url: '/cancel-order',
        data: {
          orderId: orderId,
        },
        method: 'post',
        success: (response) => {
          if (response.status) {
            location.reload()
          }
        }
      })
    }
  }

</script>

