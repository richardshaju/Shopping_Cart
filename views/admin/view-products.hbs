<div class="ml-5 mr-5 ">
  <section  style="padding-top: 7rem;">
     <div class="row pb-3">
      <a href="admin/add-product" class="btn btn-success ml-auto">Add Products</a>
    </div>
    <table class="table mt-5 pt-1  table-responsive" id="productsTable">
      <thead>
        <tr>
          <th scope="col">No</th>
          <th scope="col">Title</th>
          <th scope="col">Category</th>
          <th scope="col">Price</th>
          <th scope="col">Description</th>
          <th scope="col">Image</th>
          <th scope="col">Options</th>
          <th scope="col">Options</th>
        </tr>
      </thead>
      <tbody>
        {{#each products}}
        <tr>
          <th scope="row">{{@index}}</th>
          <td>{{this.Name}}</td>
          <td>{{this.Category}}</td>
          <td>{{this.Price}}</td>
          <td>{{this.Description}}</td>
          <td><img src="/product-images/{{this._id}}.jpg" style="width: ;50px; height:50px" alt=""></td>
          <td>
            <a class="btn btn-primary" href="/admin/edit-product/{{this._id}}">Edit</a>
          </td>
          <td><a class="btn btn-danger" href="/admin/delete-product/{{this._id}}"
              onclick="return confirm('Are you ready to delete this {{this.Name}}?')">Delete</a></td>
        </tr>
        {{/each}}
      </tbody>
    </table>
   
    <h1>{{hello}}</h1>
  </section>
</div>

<script>

 $(document).ready( function () {
    $('#productsTable').DataTable({
        "bInfo" : false,
        "bPaginate": false
    });
} );

</script>