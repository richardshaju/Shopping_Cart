<section>
  <div class="container">
    <div class="row" style="    padding-top: 7rem;">
      <div class="col-12 col-lg-8  m-auto pt-5"
        style="border: ridge;border-width: thin;box-shadow: 0 5px 38px 0 rgb(0 0 0 / 30%);">
        <h2 class="text-center mb-3 pb-5">Admin Login</h2>
        <form action="/admin/login" method="post" enctype="multipart/form-data" id="login">
          {{#if loginErr}}
          <p class="error" style="color: red;"> {{loginErr}}</p>
          {{/if}}
          <!-- Email input -->
          <div class="form-outline mb-4" style="    padding-left: 4rem;
    width: 88%;">
            <input type="email" id="form2Example1" class="form-control" placeholder="Email" name="Email"required />

          </div>

          <!-- Password input -->
          <div class="form-outline mb-4" style="    padding-left: 4rem;
    width: 88%;">
            <input type="password" id="form2Example2" class="form-control" placeholder="Password" name="Password" required/>

          </div>

          <!-- 2 column grid layout for inline styling -->
          <div class="row mb-4">
            <div class="col d-flex justify-content-center">
              <!-- Checkbox -->
            </div>
          </div>
          <div class="row row-but" style="">
            <!-- Submit button -->
            <button type="submit" class="but btn btn-primary btn-block mb-4" style="">Log in</button>
          </div>
     
        </form>
      </div>


    </div>
  </div>
</section>
